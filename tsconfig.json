{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "moduleResolution": "Node16",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "allowJs": false,
    "module": "Node16",
    "target": "ES2022",
    "outDir": "./dist",
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
